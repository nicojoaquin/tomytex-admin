<html>
  <%- include ('../layout/layout') %>
  <body>
    <div
      class="d-flex justify-content-center align-items-center flex-column h-100 container"
    >
      <div
        class="bg-dark d-flex justify-content-center align-items-center flex-column rounded-3 shadow-lg form-login"
      >
        <h3 class="text-light">Iniciar sesión</h3>
        <hr class="hr-login w-75" />
        <form class="mt-3 w-75" id="form-login">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              placeholder="Nombre de usuario"
              id="username"
              autocomplete="on"
            />
          </div>
          <div class="form-group mt-3">
            <input
              class="form-control"
              type="password"
              placeholder="Contraseña"
              id="password"
            />
          </div>

          <button class="btn btn-success w-100 mt-3" type="submit">
            Enviar
          </button>
        </form>
      </div>
    </div>

    <script src="/js/login.js"></script>
  </body>
</html>
